{
  
  "compilerOptions": {
    /* Output Options */
    "outDir": "./dist", /* Especifica la carpeta donde se guardarán los archivos compilados. */
    "rootDir": "./src", /* Indica dónde están los archivos TypeScript originales. */

    /* Language and Environment */
    "target": "ES2020",

    /* Modules */
    "module": "NodeNext", /* Cambiado para compatibilidad con TypeScript en Node.js */
    "moduleResolution": "NodeNext", /* Permite importar archivos sin extensión */
    "resolveJsonModule": true, /* Permite importar archivos JSON */
    "allowJs": true, /* Permite incluir archivos .js en la compilación */
    "checkJs": true,

    /* Interop Constraints */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "useUnknownInCatchVariables": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
